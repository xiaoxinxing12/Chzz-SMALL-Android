<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MatchWrap"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="1dp"
    app:cardElevation="1dp">

    <LinearLayout
        android:background="@drawable/selector_item"
        android:padding="@dimen/common_padding_5"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_toLeftOf="@+id/tv_status"
            style="@style/WrapWrap"
            android:layout_weight="9"
            android:orientation="vertical"
            android:padding="2dp">

            <TextView
                android:id="@+id/tv_item_normal_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_item_normal_detail_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@android:color/darker_gray"
                android:textSize="13sp" />

            <TextView
                android:layout_marginTop="@dimen/common_padding_5"
                android:id="@+id/tv_item_normal_detail_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text=""
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp" />
    </LinearLayout>
</android.support.v7.widget.CardView>